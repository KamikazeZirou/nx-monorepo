{
  "name": "echo",
  "projectType": "application",
  "sourceRoot": "go/apps/echo",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run",
        "cwd": "go/apps/echo"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "go/apps/echo"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../dist/go/apps/echo apps/echo/main.go",
        "cwd": "go"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./dist/go/apps/echo"
      }
    },
    "build-img": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build ../.. -t runner -f echo.Dockerfile",
        "cwd": "go/apps/echo"
      }
    },
    "serve-img": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up app",
        "cwd": "go/apps/echo"
      }
    }
  },
  "implicitDependencies": ["httplog"]
}
