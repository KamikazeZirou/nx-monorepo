{
  "name": "echo",
  "projectType": "application",
  "sourceRoot": "go/apps/echo",
  "namedInputs": {
    "docker": [
      "{projectRoot}/echo.Dockerfile",
      "{projectRoot}/echo.Dockerfile.dockerignore"
    ]
  },
  "targets": {
    "lint": {
      "inputs": [
        "go"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run",
        "cwd": "go/apps/echo"
      }
    },
    "test": {
      "inputs": [
        "go",
        "^go"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "go/apps/echo"
      }
    },
    "build": {
      "inputs": [
        "go",
        "^go"
      ],
      "outputs": ["{workspaceRoot}/dist/go/apps/echo"],
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../dist/go/apps/echo apps/echo/main.go",
        "cwd": "go"
      }
    },
    "serve": {
      "inputs": [
        "go",
        "^go"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "./dist/go/apps/echo"
      }
    },
    "build-img": {
      "inputs": [
        "go",
        "^go",
        "docker"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build --target runner -t {args.name}:{args.tag} -f echo.Dockerfile ../..",
        "cwd": "go/apps/echo",
        "name": "echo",
        "tag": "latest"
      }
    },
    "serve-img": {
      "inputs": [
        "go",
        "^go",
        "docker",
        "{projectRoot}/docker-compose.yml"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up app",
        "cwd": "go/apps/echo"
      }
    }
  },
  "implicitDependencies": [
    "httplog"
  ]
}
